{
    "name": "type-trade",
    "version": "0.0.0-development",
    "license": "MIT",
    "engines": {
        "node": "> 14"
    },
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "types": "./build/index.d.ts",
    "scripts": {
        "build": "yarn clean && yarn type:dts && yarn type:build",
        "clean": "node -r ./esbuild-hook ./scripts/clean",
        "cz": "cz",
        "format": "prettier \"src/**/*.ts\" --write",
        "format:check": "prettier \"src/**/*.ts\" --check",
        "lint": "eslint src --ext .ts --fix",
        "lint:check": "eslint src --ext .ts",
        "semantic-release": "semantic-release",
        "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
        "test": "ava",
        "test:coverage": "nyc ava && nyc report --reporter=html",
        "type:build": "node -r ./esbuild-hook ./scripts/build",
        "type:check": "tsc --noEmit",
        "type:dts": "tsc --emitDeclarationOnly"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/github": "^7.2.3",
        "@semantic-release/npm": "^7.1.3",
        "@semantic-release/release-notes-generator": "^9.0.3",
        "@types/node": "^17.0.21",
        "@types/prompts": "^2.0.14",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "ava": "^3.15.0",
        "commitizen": "^4.2.4",
        "cspell": "^5.9.0",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "^0.14.23",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.24.2",
        "nyc": "^15.1.0",
        "prettier": "^2.4.0",
        "prettier-plugin-pkg": "^0.11.1",
        "semantic-release": "^17.4.7",
        "source-map-support": "^0.5.20",
        "typescript": "^4.4.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "yarn@3.2.0",
    "volta": {
        "node": "16.4.1",
        "yarn": "1.22.10",
        "npm": "7.19.1"
    }
}